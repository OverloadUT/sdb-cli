{
  "name": "@spectra/sdb",
  "version": "1.0.0",
  "description": "Spectra DB - JSONL-based database CLI for agent operational data",
  "type": "module",
  "bin": {
    "sdb": "./dist/src/index.js"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run build && npm run test:unit && npm run test:integration",
    "test:unit": "node --test dist/tests/unit/**/*.test.js",
    "test:integration": "node --test dist/tests/integration/**/*.test.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  }
}
